{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "composite": true,
    "baseUrl": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@hooks/*": [
        "./hooks/api/*"
      ],
      "@layouts/*": [
        "./layouts/api/*"
      ],
      "@ui/*": [
        "./src/ui/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ]
    }
  },
  "exclude": [
    "src/**/__tests__/*",
    "./dist",
    "./node_modules"
  ],
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "@tsconfig/node18/tsconfig.json"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "env.d.ts",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "shims.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
